<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="preview_product_template">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//sheet[@name='product_form']" position="after">
                    <div class="d-flex flex-column" id="preview_product_view">
                        <div class="d-flex my-2 pb-md-0" >
                            <button string="Refresh" type="object" name="refesh_iframe" />
                            <div class="form-check form-switch h-100 mx-2 d-flex justify-content-center align-items-center">
                                <button class="oe_stat_button d-flex align-items-center" type="object" name="toggle_publish" icon="fa-globe">
                                    <span>Publish product website</span>
                                    <field class="ms-3 mt-1" name="website_published" widget="boolean_button" options="{'terminology': {'string_true': 'Published', 'string_false': 'Not Published'}}"/>
                                </button>
                            </div>
                            <button class="oe_stat_button btn btn-secondary-outline" icon="fa-mobile" type="object" name="change_view_mode" context="{'id': id}">
                                <span class="h-100">Mobile</span>
                                <field class="ms-1 mt-1" name="mobile_view" widget="boolean_button" options="{'terminology': {'string_true': 'Is Mobile View', 'string_false': 'Not Mobile View'}}"/>
                            </button>
                        </div>
                        <div class="border" id="website_preview_container">
                            <field name="website_preview_url"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>